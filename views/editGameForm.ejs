<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Game</title>
</head>
<body>
    <div style="text-align: center;">
    <h1>Edit Game</h1>
    <br>
    <% if (err) { %>
         <% err.split(',').forEach(el => { %>
            <%= console.log(el);
             %>
          <div style="color: red;">
            <b><%= el %></b>
          </div>
         <% }) %>
            <br>
        <% } %>
        <br>
    <form action="/games/<%= game.id %>/edit"  method="post">
        <label for="gameName">Game Names:</label><br>
        <input type="gameName" name="gameName" id="gameName" value="<%= game.gameName %>"><br><br>

        <label for="imageUrl">Put your Game Image:</label><br>
        <input type="imageUrl" name="imageUrl" id="imageUrl" value="<%= game.imageUrl %>"><br><br>

        <label for="CategoryId">Category</label><br>
        <select name="CategoryId" id="CategoryId">
            <% categories.forEach(c => { %>
             <option value="<%= c.id %>" <%= game.Categories.some(cat => cat.id === c.id) ? "selected" : "" %>>
                <%= c.categoryName %>
            </option>
            <% }) %>
        </select><br><br>
        <button type="submit">Edit the Game</button>
    </form>
    </div>
</body>
</html>